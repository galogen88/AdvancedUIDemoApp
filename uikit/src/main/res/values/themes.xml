<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AdvancedUIDemoApp"
        parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/white</item>
    </style>

    <style name="Theme.AdvancedUIDemoApp.NoActionBar.Dark">

        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="titleTextColor">@color/black</item>
    </style>

    <style name="Theme.AdvancedUIDemoApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AdvancedUIDemoApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AdvancedUIDemoApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
