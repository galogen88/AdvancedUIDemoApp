<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextAppearance.Regular" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="TextAppearance.LargeTitle" parent="TextAppearance.Medium">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.Regular">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">12sp</item>
        <item name="textAllCaps">true</item>
    </style>
</resources>
